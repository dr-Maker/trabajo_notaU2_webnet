@model List<Models.ClienteModel>

@{
    ViewBag.Title = "Index";
    ViewBag.TitlePag = "Lista de Clientes";
    Layout = "~/Views/Shared/_Plantilla.cshtml";
}

<p>
    @Html.ActionLink("Ingresar Nuevo Cliente", "Crear", new { }, new { @Class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Accion</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.NombreCliente</td>
                <td>@item.email</td>
                <td>@item.telefono</td>

                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.idcliente }, new { @Class = "btn btn-primary" })
                    @Html.ActionLink("Eliminar ", "Borrar", new { id = item.idcliente }, new { @Class = "btn btn-danger" })
                </td>

            </tr>
        }
    </tbody>
</table>

