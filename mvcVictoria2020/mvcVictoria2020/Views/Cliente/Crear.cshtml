@model Models.ClienteModel
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Plantilla.cshtml";
}

@using (Html.BeginForm(FormMethod.Post))
{

    <div class="form-group">
        <label>Nombre:</label>
        @Html.TextBoxFor( model => model.nombres,
        new { @class="form-control", @required = true })
    </div>

    <div class="form-group">
        <label>Apellido:</label>
        @Html.TextBoxFor( model => model.apellidos,
        new { @class="form-control", @required = true })
    </div>

    <div class="form-group">
        <label>Correo Electronico:</label>
        @Html.TextBoxFor( model => model.email,
        new { @class="form-control", @required = true, type="email" })
    </div>

    <div class="form-group">
        <label>Teléfono:</label>
        @Html.TextBoxFor( model => model.telefono,
        new { @class="form-control", @required = true, type = "number" , min="0" })
    </div>

    <div class="form-group">
        <input class="btn btn-info" type="submit" value="Grabar" />
    </div>
}

<p>
    @Html.ActionLink("Volver", "Index")
</p>

