@model List<Models.PagoModel>
@{
    ViewBag.Title = "Index";
    ViewBag.TitlePag = "Lista Pagados";
    Layout = "~/Views/Shared/_Plantilla.cshtml";
}

<p>
    @Html.ActionLink("Realizar Nuevo Pago", "Crear")
</p>


<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>Fecha checkin</th>
            <th>Fecha checkout</th>
            <th>Num. día</th>
            <th>Monto Total</th>
            <th>Monto Pagado</th>
            <th>Habitación</th>
            <th>Cliente</th>
            <th>Accion</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>@item.FechaInTxt</td>
            <td>@item.FechaOutTxt</td>
            <td>@item.numdias</td>
            <td>$ @item.total.ToString("N0")</td>
            <td>$ @item.montopago.ToString("N0")</td>
            <td>@item.NumValordia</td>
            <td>@item.NombreCliente</td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.idpago })
                @Html.ActionLink("Eliminar ", "Borrar", new { id = item.idpago })
            </td>

        </tr>
        }
    </tbody>
</table>

