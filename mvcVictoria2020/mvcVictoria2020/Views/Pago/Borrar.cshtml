@model Models.PagoModel

@{

    ViewBag.Title = "Editar";
    ViewBag.TitlePag = "Editar Pago";
    Layout = "~/Views/Shared/_Plantilla.cshtml";}

@using (Html.BeginForm(FormMethod.Post))
{

    <div class="form-group">
        <label>Cliente:</label>
        @Html.TextBoxFor( model => model.idreserva,
        new { @class="form-control", @readonly = true })
    </div>


    <div class="form-group">
        <label>Monto pago: </label>
        @Html.TextBoxFor( model => model.montopago,
       new  { @class="form-control", @readonly=true, type = "number", min="0"})
    </div>


    <div class="form-group">
        <input class="btn btn-info" type="submit" value="Grabar" />
    </div>
}

<p>
    @Html.ActionLink("Volver", "Index")
</p>
