
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/_web/css/bootstrap.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container"> 
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">@ViewBag.TitlePag</h2>
            </div>        
            <div class="card-body">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                  
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                @Html.ActionLink("Reserva", "Index", "Reserva", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Pago", "Index", "Pago", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Cliente", "Index", "Cliente", null, new { @class = "nav-link" })
                            </li>
                         </ul>
                    </div>
                </nav>

                <hr />

                @RenderBody()
            </div>
         </div>
    </div>
</body>
</html>
